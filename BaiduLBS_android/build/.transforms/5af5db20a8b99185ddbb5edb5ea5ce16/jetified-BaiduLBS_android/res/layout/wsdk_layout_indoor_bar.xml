<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:id="@+id/bar_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="18dp"
                  android:gravity="center"
                  android:id="@+id/up_scroll"
                  android:background="@drawable/wsdk_bmbar_up_bac">
        <ImageView android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:src="@drawable/wsdk_up_huadong"
                   android:layout_gravity="center"/>
    </LinearLayout>

    <ListView
            android:id="@+id/bar_a_list"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:divider="#00000000"
            android:dividerHeight="0dp"
            android:headerDividersEnabled="false"
            android:footerDividersEnabled="false"
            android:fadingEdge="none"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:cacheColorHint="#00000000"
            android:listSelector="#00000000"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="18dp"
                  android:id="@+id/down_scroll"
                  android:background="@drawable/wsdk_bmbar_down_bac">
        <ImageView android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:src="@drawable/wsdk_down_huadong"
                   android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>