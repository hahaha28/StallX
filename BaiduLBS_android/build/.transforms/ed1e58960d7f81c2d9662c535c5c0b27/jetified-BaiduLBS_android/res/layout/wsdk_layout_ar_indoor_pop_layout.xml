<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ar_pop_content"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/ar_end_focus_layout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/end_title"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_centerVertical="true"
                android:padding="3dp"
                android:background="@drawable/wsdk_roundcorner_ar_pop_indoor_left_bg"
                android:src="@drawable/wn_elevator_white" />

            <LinearLayout
                    android:id="@+id/ar_end_layout"
                    android:layout_width="1px"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@id/end_title"
                    android:background="#cc000000">

                <ImageView
                    android:id="@+id/divide_line"
                    android:layout_marginRight="9dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:background="#1f304a"
                    android:layout_width="1px"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginRight="0dp"
                android:layout_toRightOf="@id/ar_end_layout"
                android:background="@drawable/wsdk_roundcorner_ar_pop_indoor_right_bg"
                android:gravity="center_vertical">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="0dp"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/ar_end_poi_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="9dp"
                            android:width="130dp"
                            android:maxLength="10"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="#ffffff"
                            android:textSize="14dp" />

                    <TextView
                            android:id="@+id/ar_end_poi_dis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="9dp"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="#ffffff"
                            android:textSize="12dp" />
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ar_end_nofoucus_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible">

            <ImageView
                android:id="@+id/ar_end_left_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="-5dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/wsdk_ar_end_left_arrow"
                android:visibility="visible" />

            <ImageView
                android:layout_toRightOf="@+id/nofocus_icon"
                android:id="@+id/ar_end_right_arrow"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-5dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/wsdk_ar_end_right_arrow"
                android:visibility="visible" />

            <ImageView
                    android:id="@+id/nofocus_icon"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/ar_end_left_arrow"
                    android:layout_toEndOf="@+id/ar_end_left_arrow"
                    android:background="@drawable/wsdk_ar_pop_circle_bg"/>

        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>